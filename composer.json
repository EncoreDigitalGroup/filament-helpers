{
    "name": "encoredigitalgroup/filament-helpers",
    "description": "A collection of pre-built Filament components with common configurations that we find ourselves frequently using.",
    "type": "library",
    "license": "BSD-3-Clause",
    "require": {
        "filament/filament": "^4.0.0-beta24",
        "illuminate/support": "^11|^12",
        "phpgenesis/common": "^1.0",
        "encoredigitalgroup/stdlib": "^2.0",
        "livewire/livewire": "^3.6.4"
    },
    "require-dev": {
        "phpstan/phpstan": "^2.0",
        "rector/rector": "^2.0",
        "tightenco/duster": "^2.7 || ^3.0",
        "phpgenesis/devutilities": "^1.0",
        "filament/upgrade": "^4.0"
    },
    "autoload": {
        "psr-4": {
            "EncoreDigitalGroup\\Filament\\Helpers\\": "src/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "PHPGenesis\\Common\\Composer\\Scripts::postAutoloadDump"
        ]
    },
    "minimum-stability": "beta",
    "extra": {
        "laravel": {
            "providers": [
                "EncoreDigitalGroup\\Filament\\Helpers\\Providers\\FilamentHelperServiceProvider"
            ]
        }
    }
}
